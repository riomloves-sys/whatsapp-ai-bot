# ─── OpenAI ──────────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key_here
# Optional: change model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# ─── Whapi Cloud ─────────────────────────────────────────
WHAPI_API_KEY=your_whapi_api_key_here
# Optional: change base URL if using a custom Whapi endpoint
WHAPI_API_URL=https://gate.whapi.cloud

# ─── Server ──────────────────────────────────────────────
PORT=3000

# ─── Rate Limiting (optional) ────────────────────────────
# Max messages a single number can send per time window
RATE_LIMIT_MAX=5
# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
